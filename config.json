{
    "$schema": "./config.schema.json",
    "log": true,
    "port": 443,
    "encoding": "utf8",
    "tcpFallback": true,
    "tcpPort": 80,
    "servers": [
        {
            "host": "localhost",
            "tls": {
                "cert": "./servers/example/cert",
                "key": "./servers/example/key",
                "requestCert": false
            },
            "process": {
                "cwd": "./servers/example",
                "main": "./index.js",
                "env": {
                    "HELLO_INTERTLS": "Hi! This InterTLS server has not been configured yet."
                }
            }
        }
    ]
}