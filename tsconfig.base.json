{
    "compilerOptions": {
        "rootDir": "./src",
        "noImplicitAny": true,
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "sourceMap": true,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "incremental": true,
        "allowUnreachableCode": false,
        "declaration": true,
        "declarationMap": true,
        "removeComments": true
    }
}